<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <persistence-unit name="encomingPU" transaction-type="JTA">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <jta-data-source>encoming</jta-data-source>
    <class>com.encoming.encoming.entity.Administrator</class>
    <class>com.encoming.encoming.entity.Client</class>
    <class>com.encoming.encoming.entity.Driver</class>
    <class>com.encoming.encoming.entity.Invoice</class>
    <class>com.encoming.encoming.entity.Package</class>
    <class>com.encoming.encoming.entity.Person</class>
    <class>com.encoming.encoming.entity.Point</class>
    <class>com.encoming.encoming.entity.Route</class>
    <class>com.encoming.encoming.entity.Shipping</class>
    <class>com.encoming.encoming.entity.Vehicle</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.jdbc.password" value="german2012"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
    </properties>
  </persistence-unit>
</persistence>
